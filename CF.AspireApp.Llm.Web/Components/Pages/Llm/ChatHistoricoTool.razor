@page "/chathistoricotool"
@attribute [StreamRendering]
@rendermode InteractiveServer
@using System.Net.Http.Headers
@using System.Text
@using Microsoft.AspNetCore.Components
@using Microsoft.SemanticKernel
@using Microsoft.SemanticKernel.ChatCompletion
@using CF.AspireApp.Llm.Web.Components.Pages.Llm.Model;
@using System.Text.Json

@inject TextStreamApiClient TextStreamApiClient

<PageTitle>Chat con LLM</PageTitle>

<div>
    <h1>Chat con LLM</h1>

    <div style="height: 800px; overflow-y: auto; border: 1px solid #ccc; padding: 10px;">
        @foreach (var message in messages)
        {
            <div class="@(message.Role == AuthorRole.User ? "user-message" : "assistant-message")">
                <ChatMessageContentComponent Message="@message" />
            </div>
        }
    </div>

    <MessageInputComponent OnMessageSubmit="StartStreamTool" IsStreaming="@isStreaming" />

    <LoadingSpinnerComponent IsVisible="@isStreaming" />
</div>

<style>
    .user-message {
        background-color: #e0f7fa;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 10px;
    }

    .assistant-message {
        background-color: #f1f8e9;
        padding: 10px;
        border-radius: 5px;
        margin-bottom: 10px;
    }
</style>

@code {
    private ChatHistory messages = new();
    private bool isStreaming = false;
    private CancellationTokenSource? cancellationTokenSource;
    private StringBuilder finalMessage = new StringBuilder(); // Variable para almacenar el mensaje final

    protected override void OnInitialized()
    {
        base.OnInitialized();
        AddInitialMessage();
    }

    private void AddInitialMessage()
    {
        var initialMessage = "Bienvenido al chat con LLM. ¿En qué puedo ayudarte hoy?";
        messages.AddSystemMessage(initialMessage);
    }

    private async Task StartStreamTool(string userInput)
    {
        isStreaming = true;
        cancellationTokenSource = new CancellationTokenSource();
        finalMessage.Clear(); // Limpiar el mensaje final

        try
        {
            messages.AddUserMessage(userInput);

            // Crear una copia de los mensajes sin el último mensaje del usuario
            var messagesWithoutLast = new ChatHistory(messages.Take(messages.Count - 1).ToList());

            await TextStreamApiClient.StartTextStreamWithHistoryToolAsync(userInput, messagesWithoutLast, OnMessageReceivedAsyncTool, cancellationTokenSource.Token);
        }
        catch (OperationCanceledException)
        {
            messages.AddSystemMessage("Stream canceled.");
        }
        finally
        {
            isStreaming = false;
        }

        StateHasChanged();
    }

    private void StopStreamTool()
    {
        cancellationTokenSource?.Cancel();
    }

    private async Task OnMessageReceivedAsyncTool(string message)
    {
        Console.WriteLine($"[{DateTime.Now:yyyy-MM-dd HH:mm:ss.fff}] Mensaje recibido: {message}");
        await InvokeAsync(() =>
        {
            var lastMessage = messages.LastOrDefault();
            if (lastMessage != null && lastMessage.Role == AuthorRole.Assistant)
            {
                lastMessage.Content += message;
            }
            else
            {
                ChatMessageContent chatMessageContent = new ChatMessageContent(AuthorRole.Assistant, message, modelId: "defaultModelId");
                messages.Add(chatMessageContent);
            }

            // Actualizar el mensaje final
            finalMessage.Append(message);

            StateHasChanged();
        });
    }
}

